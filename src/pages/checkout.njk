{% extends "layouts/_minimal-layout.njk" %}
{% set BASE_TITLE = "Checkout" %}
{% set BASE_HREF = "./" %}

{% block additional_scripts %}
<script src="{{BASE_HREF}}assets/scripts/vendor/inputmask/min/jquery.inputmask.bundle.min.js"></script>
<script src="{{BASE_HREF}}assets/scripts/basketList.js"></script>
{% endblock %}

{% block main %}
<div class="section section--white section--yspace">
   <div class="container">
      <div class="row mb-4-lg">
         <div class="col-2of4">
            <h1 class="section__title mb-0 mb-4-lg">{{BASE_TITLE}}</h1>
         </div>
         <div class="col-2of4">
            <div class="text-right-lg">
               {% include "partials/_partial-nav-steps.njk" %}
            </div>
         </div>
      </div>
      <form class="form" novalidate>
         <div class="row">
            <div class="col-2of3 pr-5-xl">
               <h3 class="form__title mb-4">Please provide your information below.</h3>
               {% include "partials/_partial-checkout-form.njk" %}
            </div>
            <div class="col-1of3">
               <div class="article article--floating pl-3-lg">
                  <div class="article__wrapper">
                     <h3 class="form__title mb-4">Summary Order</h3>
                     <div class="article__text">
                        <span>Perkiraan Total Harga <strong>( 3 Produk )</strong></span>
                     </div>
                     <div class="article__price mask-currency mb-4">1255000</div>
                     <div class="article__note mb-4">
                        <p>NOTE:<br/>Perkiraan Total Harga diluar dari Biaya Pengiriman, Asuransi Pengiriman ataupun Pajak Pemerintah yang berlaku </p>
                     </div>
                     <!-- please change button type="button" to type="submit" for production -->
                     <button type="button" class="button button--primary" data-target="#modalThankyou" data-toggle="modal">Kirim Pemesanan</button>
                  </div>
               </div>
            </div><!-- /.col-1of3 -->
         </div><!-- /.row -->
      </form><!-- /form -->
   </div>
</div>
{% endblock %}

{% block post_main %}
{% include "partials/_partial-modal-thankyou.njk" %}
{% endblock %}